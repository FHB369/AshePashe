<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:mapbox="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SelectArea">

    <com.mapbox.mapboxsdk.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        mapbox:mapbox_styleUrl="@string/mapbox_style_outdoors"
        mapbox:mapbox_cameraZoom="12" />

    <Button
        android:id="@+id/buttonselection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:text="এলাকা সিলেক্ট করুণ"
        android:background="@color/dark_blue"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="16sp"
        android:paddingVertical="20dp"
        tools:ignore="HardcodedText"
        android:shadowDy="5"
        android:shadowRadius="-6"
        android:shadowColor="@color/dark"/>


    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="18dp"
        android:shadowDy="5"
        android:shadowDx="3"
        android:background="@drawable/ic_check_circle_shadow_24dp" />

    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:background="@drawable/rounded_corners_white" />

    <Button
        android:id="@+id/select_area"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:shadowDy="5"
        android:shadowDx="3"
        android:background="@drawable/ic_check_circle_black_24dp" />

</RelativeLayout>