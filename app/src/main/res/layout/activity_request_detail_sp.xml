<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RequestDetailSP">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginHorizontal="20dp">

        <TextView
            android:id="@+id/title_detail_req_sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textSize="40dp"
            android:textAlignment="center"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:id="@+id/package_detail_req_sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textAlignment="center"
            android:textColor="@color/blue"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/sender_detail_req_sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            android:textSize="20dp"/>

        <Button
            android:id="@+id/status_detail_req_sp"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="Button"
            android:layout_marginVertical="20dp"
            android:background="@drawable/rounded_corners"
            android:textSize="15dp"
            android:textColor="@color/colorPrimaryDark"/>

        <Button
            android:id="@+id/btn_req_contact_sp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="ফোন করুণ"
            android:textSize="20dp"
            android:background="@drawable/rounded_corners_white"
            android:layout_marginVertical="10dp"
            android:textColor="@color/colorAccent"
            />

        <Button
            android:id="@+id/btn_req_direction_sp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="ম্যাপ নির্দেশনা"
            android:textSize="20dp"
            android:background="@drawable/rounded_corners_white"
            android:layout_marginBottom="10dp"
            android:textColor="@color/light_blue"
            />

        <Button
            android:id="@+id/btn_req_cancel_sp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="ক্যানসেল"
            android:textSize="20dp"
            android:background="@drawable/rounded_corners_white"
            android:layout_marginBottom="10dp"
            android:textColor="@color/mapbox_navigation_route_layer_congestion_red"
            />
    </LinearLayout>
</RelativeLayout>