<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ModifyRequest">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginHorizontal="20dp">

        <TextView
            android:id="@+id/title_modify_req"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textSize="40dp"
            android:textAlignment="center"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:id="@+id/package_modify_req"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/address_time_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            android:textSize="20dp"/>

        <Button
            android:id="@+id/status_modify_req"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="Button"
            android:layout_marginVertical="20dp"
            android:background="@drawable/rounded_corners"
            android:textSize="15dp"
            android:textColor="@color/colorPrimaryDark"/>

        <Button
            android:id="@+id/btn_req_complete"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="সম্পন্ন"
            android:textSize="20dp"
            android:background="@drawable/rounded_corners_white"
            android:layout_marginVertical="10dp"
            android:textColor="@color/colorAccent"
            />

        <Button
            android:id="@+id/btn_phone_sp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="ফোন করুণ"
            android:textSize="20dp"
            android:background="@drawable/rounded_corners_white"
            android:layout_marginVertical="10dp"
            android:textColor="@color/blue"
            />

        <Button
            android:id="@+id/btn_req_cancel"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="বাতিল"
            android:textSize="20dp"
            android:background="@drawable/rounded_corners_white"
            android:textColor="@android:color/holo_red_light"/>

        <Button
            android:id="@+id/btn_send_complain"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="অভিযোগ জানান"
            android:textSize="20dp"
            android:background="@drawable/rounded_corners_white"
            android:textColor="@android:color/holo_red_light"/>
    </LinearLayout>
</RelativeLayout>